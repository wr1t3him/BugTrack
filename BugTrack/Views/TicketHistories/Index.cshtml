@model IEnumerable<BugTrack.Models.TicketHistory>
@{
    ViewBag.Title = "Index";
}
<h2>Ticket Record</h2>
<div class="col-md-6">
    <div class="panel-group">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title">
                    <a data-toggle="collapse" href="#collapse4">History:</a>
                </h4>
            </div>
            <div id="collapse4" class="panel-collapse collapse">
                @foreach (var history in Model.OrderByDescending(c => c.Changed))
                {
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-4">
                                <strong>@Html.DisplayName("Ticket Title:")</strong>
                            </div>
                            <div class="col-md-8">
                                <span style="color:blue">@history.Ticket.Title</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <strong>@Html.DisplayName("Change made by:")</strong>
                            </div>
                            <div class="col-md-8">
                                <span style="color:blue">@history.User.FirstName</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <strong>@Html.DisplayName("Changed:")</strong>
                            </div>
                            <div class="col-md-8">
                                <span style="color:blue">@history.Changed</span>
                            </div>
                        </div>

                        <div class="row"><hr /></div>

                        <div class="row">
                            <div class="col-md-5">
                                <div class="row">
                                    <div class="col-md-4">
                                        <strong>@Html.DisplayName("Property:")</strong>
                                    </div>
                                    <div class="col-md-8">
                                        <span style="color:blue">@history.Property</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="row">
                                    <div class="col-md-4">
                                        <b>@Html.DisplayName("OldValue:")</b>
                                    </div>
                                    <div class="col-md-8">
                                        <span style="color:blue">@history.OldValue</span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <b>@Html.DisplayName("NewValue:")</b>
                                    </div>
                                    <div class="col-md-8">
                                        <span style="color:blue">@history.NewValue</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
